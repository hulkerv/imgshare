<div class="card">
    <div class="card-header bg-success">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Upload an Image
        </h3>
    </div>
    <div class="card-body">
        <form action="/images/new_image" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file imput" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroup" class="custom-file-label" id="file">Choose File</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title...">
            </div>
            <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="Description..." required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">
                    <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>
